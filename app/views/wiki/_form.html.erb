<div class="container col-md-6 col-md-offset-3">
  <%= form_for locals[:wiki], url: locals[:path] do |f| %>
    <div class="form-group">
      <%= f.label :Wiki_Visibility %>
      <% if current_user.tier == 'premium' %>
        <%= f.select :level, ['public', 'private']%>
      <% else %>
         Public
        <%= f.hidden_field :level, value: "public"%>
      <% end %>
    </div>
    <div class="form-group"> 
      <%= f.label :subject %>
      <%= f.text_field :subject, class: 'form-control' %>
    </div>
    <div class="form-group"> 
      <%= f.label :body %>
      <%= f.text_area :body, rows: '25', class: 'form-control'%>
    </div>
    <% if locals[:collab] %>
    <div class="form-group">
      <%= fields_for(locals[:collab]) do |c| %>
        <%= c.label :add_a_collaborator %>
        <%= c.select :user, User.all.collect {|u| [u.email]}, include_blank: true %>
        <%= c.hidden_field :wiki, value: locals[:wiki] %>
        <!-- sorry... this is as close to creating a collaboration as I got T_T, still nothing inserted into DB -->
        <%= c.submit %>
      <% end %>
    <% end %>
    </div>
  <%=f.submit "Post"%>
  <% end %>

</div>